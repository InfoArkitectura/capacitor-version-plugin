{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["es2017", "dom", "dom.iterable", "es6"],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noResolve": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
